    {
      "matches": ["http://*.facebook.com/*", "https://*.facebook.com/*"],
      "js": [
						"backend/js/contentscripts/facebook.js" 
						]
    }
  ],
	"default_locale": "en",
	"permissions": [
		"tabs",
		"notifications",
		"unlimitedStorage",
		"https://*.google.com/*",
		"https://*.facebook.com/*",
		"http://gpg-keyserver.de/pks/lookup/*"
	]
}
